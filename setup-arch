#!/usr/bin/env bash

set -e  # Exit immediately on any error
set -o pipefail

# set time to use RTC instead of RTC
# sudo timedatectl set-local-rtc 1

echo "Updating package lists..."
sudo pacman -Syu brightnessctl --noconfirm

echo "Installing required packages..."
sudo pacman -S --noconfirm ttf-jetbrains-mono-nerd nvim

echo "Installing Paru..."
pushd runs
./install-paru

echo "Installing Zen browser..."
./zen-browser

echo "Installing Ghostty.."
./ghostty

./tmux

echo "Installing Hyperland"
./setup-hyprland.sh

# Install javascript
./node

# Install python
./python

./vlc

./zsh.sh

./copy-changes

echo "Package installation and config setup complete!"
